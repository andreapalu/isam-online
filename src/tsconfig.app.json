{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../dist",
    // "rootDir": "../../isam-online",
    /* Experimental Options */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    // "experimentalDecorators": true,
    // "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    // "module": "esnext",
    "moduleResolution": "node",
    // "importHelpers": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    // "module": "commonjs",
    // "types": [
    //   "jasmine",
    //   "node"
    // ],
    "module": "es2015",
    "types": []
  },
  "files": [
    "test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "./main.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}